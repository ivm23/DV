<UserControl x:Class="Registration.WPF.Views.Controls.ImportanceDegreeEditorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Registration.WPF.Views.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="128">
    <Grid>
        <ComboBox x:Name="comboImportanceDegree" ItemsSource="{Binding ImportanceDegrees.Values}" SelectedValue="{Binding Path=SelectedImportanceDegree}" IsEnabled="{Binding Path=Enable}" HorizontalAlignment="Left" Height="25" VerticalAlignment="Top" Width="128"/>
    </Grid>
</UserControl>
