<UserControl x:Class="Registration.WPF.Views.Controls.ImportanceDegreeEditorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Registration.WPF.Views.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="128">
    
    <UserControl.Resources>
        <Style TargetType="ComboBox" BasedOn="{StaticResource standartComboBox}"/>
    </UserControl.Resources>
    
    <Grid>
        <ComboBox x:Name="comboImportanceDegree" ItemsSource="{Binding ImportanceDegrees.Values}" SelectedItem="{Binding Path=NameSelectedDegree}" IsEnabled="{Binding Path=Enable}"/>
    </Grid>
    
</UserControl>
