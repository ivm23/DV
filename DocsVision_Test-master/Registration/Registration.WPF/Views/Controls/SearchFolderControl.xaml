<UserControl x:Class="Registration.WPF.Views.Controls.SearchFolderControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Registration.WPF.Views.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="127" d:DesignWidth="326">
    <Grid>
        <local:CreateFolderControl x:Name="createFolderControl" HorizontalAlignment="Left" Margin="0,0,-8,0" VerticalAlignment="Top" Width="334"/>
        <Label x:Name="label" Content="Which messages would you like to show in this folder?" HorizontalAlignment="Left" Margin="11,59,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label1" Content="Show in folder if Sender contains" HorizontalAlignment="Left" Margin="12,87,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="comboSelectedWorkers" ItemsSource="{Binding Path=WorkersNames}" HorizontalAlignment="Left" Margin="201,87,0,0" SelectedValue="{Binding Path=SelectedWorkerName}" VerticalAlignment="Top" Width="120"/>

    </Grid>
</UserControl>
