<Window x:Class="Registration.WPF.Views.MakeLetterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Registration.WPF.Views"
        mc:Ignorable="d"
        Title="MakeLetterWindow" Height="600" Width="601">
    <Grid Margin="0,0,-8,-4">
        <Button x:Name="button" Content="Cancel" HorizontalAlignment="Left" Margin="502,540,0,0" VerticalAlignment="Top" Width="76"/>
        <Button x:Name="button_Copy" Content="Send" HorizontalAlignment="Left" Margin="408,540,0,0" Command="{Binding Path=SendLetterClick}" VerticalAlignment="Top" Width="76" RenderTransformOrigin="1.921,0.875"/>
        <StackPanel x:Name="stackPanel"  HorizontalAlignment="Left" Height="519" VerticalAlignment="Top" Width="591"/>

    </Grid>
</Window>
