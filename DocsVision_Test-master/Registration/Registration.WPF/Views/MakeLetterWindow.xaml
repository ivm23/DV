<Window x:Class="Registration.WPF.Views.MakeLetterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Registration.WPF.Views"
        mc:Ignorable="d"
        Title="MakeLetterWindow" Height="600" Width="559" WindowStartupLocation="{StaticResource standartWindowStartupLocation}" Style="{StaticResource standartWindow}">
    <Window.Resources>
        <Style TargetType="Button" BasedOn="{StaticResource standartButton}"/>
    </Window.Resources>

    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="38"/>
        </Grid.RowDefinitions>


        <StackPanel x:Name="stackPanel" Grid.Row="0" />
        
        <StackPanel Orientation="Horizontal" Grid.Row="1">
            <Button x:Name="buttonSend" Content="Send" Command="{Binding Path=SendLetterClick}" Click="SendButton_Click" Grid.Row="1"/>
            <Button x:Name="buttonCancel" IsCancel="true" Content="Cancel" />           
        </StackPanel>


    </Grid>
</Window>
