<Window x:Class="Registration.WPF.Views.LetterViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Registration.WPF.Views"
        mc:Ignorable="d"
        x:Name="letterViewWindow"
        xmlns:Controls="clr-namespace:Registration.WPF.Views.Controls"
        Title="FullContentLetterWindow" Height="600" Width="557" WindowStartupLocation="{StaticResource standartWindowStartupLocation}">
    <Window.Resources>
        <Style TargetType="Menu" BasedOn="{StaticResource standartMenu}"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="19"/>
            <RowDefinition Height="550*"/>
        </Grid.RowDefinitions>

        <Menu Name="Menu" Grid.Row="0" Grid.RowSpan="2">
            <MenuItem Header="Delete Letter" Command="{Binding Path=DeleteLetter}" CommandParameter="{Binding ElementName=letterViewWindow}">
                <MenuItem.Icon>
                    <Image Source="C:\Users\Ivanova.M\Downloads\DeleteLetter.png"/>
                </MenuItem.Icon>
            </MenuItem>
        </Menu>

        <StackPanel x:Name="stackPanel" Grid.Row="1" />
    </Grid>
</Window>
