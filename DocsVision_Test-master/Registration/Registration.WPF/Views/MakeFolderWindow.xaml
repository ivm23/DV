<Window x:Class="Registration.WPF.Views.MakeFolderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Registration.WPF.Views"
        mc:Ignorable="d"
        Title="MakeFolderWindow" Height="190" Width="350" WindowStartupLocation="{StaticResource standartWindowStartupLocation}" Style="{StaticResource standartNoResize}">

    <Window.Resources>
        <Style TargetType="Button" BasedOn="{StaticResource standartButton}"/>
        <Style TargetType="StackPanel">
            <Setter Property="Margin" Value="10"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel x:Name="stackPanel" Grid.Row="0"/>

        <StackPanel Orientation="Horizontal" Grid.Row="1">
            <Button x:Name="buttonCreate" IsDefault="True" Content="Create" Command="{Binding Path=CreateFolder}" Click="CreateButton_click" TabIndex="0"/>
            <Button x:Name="buttonCancel" IsCancel="true" Content="Cancel" TabIndex="1"/>
        </StackPanel>

    </Grid>
</Window>
