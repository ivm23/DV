<Window x:Class="Registration.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Registration.WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" WindowStartupLocation="CenterScreen"
        Initialized="Window_Initialized">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="170*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="170*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="159*" />
            <ColumnDefinition Width="13*"/>
        </Grid.ColumnDefinitions>
        <DataGrid Grid.Column="2" Margin="0,20,0,0"/>
        <TreeView Grid.Column="0" Margin="0,20,0,0" ItemsSource="{Binding DirItems}">
            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate ItemsSource="{Binding Path=Items}">
                    <TextBlock Text="{Binding Path=Name}" />
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>
        <GridSplitter Grid.Column="1" ShowsPreview="False" Width="3"
        HorizontalAlignment="Center" VerticalAlignment="Stretch" />
        <GridSplitter Grid.Column="3" ShowsPreview="False" Width="3"
        HorizontalAlignment="Center" VerticalAlignment="Stretch" />
        <Menu Height="20" Width ="525
              "  VerticalAlignment="Top" Grid.ColumnSpan="3" Margin="0,0,143,0">
            <MenuItem Header="New Letter">
                <MenuItem.Icon>
                    <Image Source="C:\Users\Ivanova.M\Downloads\NewLetter.png"/>
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem Header="Delete Letter">
                <MenuItem.Icon>
                    <Image Source="C:\Users\Ivanova.M\Downloads\DeleteLetter.png"/>
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem Header="Delete"/>
        </Menu>
    </Grid>
</Window>
